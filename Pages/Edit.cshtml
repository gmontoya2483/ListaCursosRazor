@page
@model ListaCursos.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Course.Name</h1>


<form method="post">

    <input type="hidden" asp-for="@Model.Course.Id"/>

    <div class=" form-group">
        <label asp-for="Course.Name"></label>
        <input class="form-control" asp-for="Course.Name" />
        <span class="text-danger" asp-validation-for="Course.Name"></span>
    </div>

    <div class=" form-group">
        <label asp-for="Course.Description"></label>
        <textarea class="form-control" asp-for="Course.Description"></textarea>
        <span class="text-danger" asp-validation-for="Course.Description"></span>
    </div>

    <div class=" form-group">
        <label asp-for="Course.Author"></label>
        <input class="form-control" asp-for="Course.Author" />
        <span class="text-danger" asp-validation-for="Course.Author"></span>
    </div>

    <div class=" form-group">
        <label asp-for="Course.Uri"></label>
        <input class="form-control" asp-for="Course.Uri" />
        <span class="text-danger" asp-validation-for="Course.Uri"></span>
    </div>

    <button class=" btn btn-primary" type="submit">Guardar</button>

</form>

