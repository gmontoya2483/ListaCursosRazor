@page
@model ListaCursos.Pages.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Course.Name</h1>

<div class="card">
    <div class="card-header">
        Descripción
    </div>
    <div class="card-text">
        @Model.Course.Description
    </div>
</div>

<div class="card">
    <div class="card-header">
        Author
    </div>
    <div class="card-text">
        @Model.Course.Author
    </div>
</div>


<div class="card">
    <div class="card-header">
        Dirección
    </div>
    <div class="card-text">
        @Model.Course.Uri
    </div>
</div>
<div>
    <a class= "btn btn-primary" asp-page="Courses">Ver la lista completa de cursos</a>
</div>


